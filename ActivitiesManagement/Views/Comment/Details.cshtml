@model IEnumerable<ActivitiesManagement.Models.Comment>
@{
}
<a href="@Url.Action("Create", "Comment", new { id = ViewBag.TaskId })" class="btn btn-default">Create a comment</a>
@using (Html.BeginForm(actionName: "Delete", controllerName: "Comment", routeValues: new { id = ViewBag.CommentId }))
{

    @Html.HttpMethodOverride(HttpVerbs.Delete)

    <button class="btn btn-success" type="submit">Sterge comment-ul</button>
}
@foreach (var item in ViewBag.Points)
{
    <tr>
        @*<td>
                @Html.DisplayFor(modelItem => item.Team.)
            </td>*@
        <td>
            @item.Point
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Show", new { id = item.Id }) |
            @using (Html.BeginForm(actionName: "Delete", controllerName: "Comment", routeValues: new { id = item.Id }))
            {
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <button class="btn btn-success" type="submit">Sterge comment-ul</button>
            }
        </td>
    </tr>
}