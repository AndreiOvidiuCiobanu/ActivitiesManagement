@model IEnumerable<ActivitiesManagement.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Point)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.Points)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Team.)
                </td>*@
            <td>
                @item.Point
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @using (Html.BeginForm(actionName: "Delete", controllerName: "Comment", routeValues: new { id = item.Id }))
                {
                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                    <button class="btn btn-success" type="submit">Sterge comment-ul</button>
                }
            </td>
        </tr>
    }

</table>
