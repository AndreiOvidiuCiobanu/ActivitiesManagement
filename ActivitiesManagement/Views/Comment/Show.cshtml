<div>
    <hr />
    <dl class="dl-horizontal">

        <h3>Comments on task</h3>

    </dl>
</div>
<p>
    @Html.ActionLink("Add New Comment", "Create", new { id = ViewBag.todoId })
</p>
<table class="table">
    <tr>
        <th>
            Content
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.point)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Team.)
                </td>*@
            <td>
                @item.Point
            </td>
            <td>


                @if (User.IsInRole("Administrator") || (User.IsInRole("Member") && ViewBag.userId == item.ApplicationUserId))
                {
                    <ul>
                        <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                        <li>
                            @using (Html.BeginForm(actionName: "Delete", controllerName: "Comment", routeValues: new { id = item.Id }))
                            {
                                @Html.HttpMethodOverride(HttpVerbs.Delete)
                                <button class="btn btn-success" type="submit">Sterge comment-ul</button>
                            }
                        </li>
                    </ul>
                }

            </td>
        </tr>
    }

</table>
